<%- include("partials/head.ejs") %> <%- include("partials/header.ejs") %>

<div class="main">
  <h1 class="display-5 fw-bolder lh-1 mb-3 mt-5 quienesSomos">
    Puedes buscar paseadores en tu area
  </h1>
  <div class="wrap">
    <form action="/area" method="POST">
      <div class="search">
        <select name="area" class="searchTerm"">
          <option value="all">Todas las ciudades</option>
          <option value="San Miguel">San Miguel</option>
          <option value="Yerba Buena">Yerba Buena</option>
          <option value="Famailla">Famaillá</option>
          <option value="Lules">Lules</option>
          <option value="Concepcion">Concepción</option>
        </select>
        <button type="submit" class="searchButton">
          <i class="fa fa-search"></i>
        </button>
      </div>
      
      </form>
  </div>

  <ul class="cards">
    <% if (walkers.length === 0) { %>
    <h1>No hay Paseadores para mostrar en este momento</h1>
    <% }else{ %> <% walkers.forEach(walker =>{ %>
    <li class="cards_item">
      <div class="card">
        <div
          class="card_image"
          style="background-image: url('<%= walker.imgUrl %>')"
        ></div>
        <div class="card_content">
          <h2 class="card_title"><%= walker.name%></h2>
          <p class="card_text">
            <%= walker.description %> mi numero de contacto es <span> <%= walker.phoneNumber %> </span>y me puedes encontrar trabajando en: <h2 class="walkerArea"><%=walker.area %></h2>
          </p>
        </div>
      </div>
    </li>

    <% }) %> <% } %>
    <li class="cards_item"></li>
  </ul>
</div>
<%- include("partials/footer.ejs") %>
